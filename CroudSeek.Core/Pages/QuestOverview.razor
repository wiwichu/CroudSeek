@page "/questoverview"
@inherits QuestOverviewBase

<h1 class="page-title">All quests</h1>
@if (Quests == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Quest ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Is Private</th>
                <th>Owner Id</th>
                <th>Zone Id</th>
                <th>Create Time</th>
                <th>Update Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quest in Quests)
            {
                <tr>
                    <td>@quest.Id</td>
                    <td>@quest.Name</td>
                    <td>@quest.Description</td>
                    <td>@quest.IsPrivate</td>
                    <td>@quest.OwnerId</td>
                    <td>@quest.ZoneId</td>
                    <td>@quest.CreateTime</td>
                    <td>@quest.UpdateTime</td>
                </tr>
            }
        </tbody>
    </table>
}